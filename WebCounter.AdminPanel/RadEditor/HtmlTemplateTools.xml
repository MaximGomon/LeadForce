<root>
  <cssFiles>
    <item name="~/App_Themes/Default/RadEditor.css" />
  </cssFiles>
  <tools name="MainToolbar" dockable="true" enabled="true">
    <tool name="Undo" />
    <tool name="Redo" />
    <tool separator="true" />
    <tool name="Cut" />
    <tool name="Copy" />
    <tool name="Paste" shortcut="CTRL+!"/>
    <tool name="PasteHtml" />
    <tool separator="true" />
    <tool name="Bold" />
    <tool name="Italic" />
    <tool name="Underline" />
    <tool name="StrikeThrough" />
    <tool separator="true" />
    <tool name="JustifyLeft" />
    <tool name="JustifyCenter" />
    <tool name="JustifyRight" />
    <tool name="JustifyFull" />
  </tools>
  <tools name="Formatting" dockable="true" enabled="true">
    <tool name="InsertUnorderedList" />
    <tool name="InsertOrderedList" />
    <tool separator="true" />
    <tool name="ForeColor" />
    <tool name="BackColor"/>
    <tool separator="true" />
    <tool name="FontName"/>
    <tool name="RealFontSize"/>
  </tools>
  <tools name="Html" dockable="true" enabled="true">        
    <tool name="ImageManager" shortcut="CTRL+G"/>
    <tool name="InsertImage"/>
    <tool name="LinkManager" shortcut="CTRL+K"/>
    <tool name="InsertLink" />
    <tool name="Unlink" shortcut="CTRL+SHIFT+K"/>
    <tool name="ToggleScreenMode" shortcut="F11"/>
    <tool name="XhtmlValidator" />
  </tools>  
</root>
